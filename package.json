{
  "name": "@americano/monorepo",
  "version": "1.0.0",
  "description": "Americano - AI-Powered Medical Education Platform",
  "private": true,
  "workspaces": [
    "apps/web",
    "services/ml-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:ml\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:ml": "cd services/ml-service && source venv/bin/activate && uvicorn app.main:app --reload --port 8000",
    "dev:web-only": "cd apps/web && npm run dev",
    "dev:ml-only": "cd services/ml-service && source venv/bin/activate && uvicorn app.main:app --reload --port 8000",
    "build": "npm run build:web && npm run build:ml",
    "build:web": "cd apps/web && npm run build",
    "build:ml": "cd services/ml-service && pip install -r requirements.txt",
    "health-check": "bash scripts/check-services.sh",
    "setup": "bash scripts/setup.sh",
    "setup:ml": "bash scripts/setup-ml.sh",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome ci .",
    "lint:docs": "markdownlint 'docs/**/*.md' '*.md' 'bmad/**/*.md' --ignore node_modules --ignore apps/web/node_modules",
    "check:links": "find docs -name '*.md' -not -path '*/node_modules/*' -exec markdown-link-check --config .markdown-link-check.json {} \\;"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "concurrently": "^8.2.2",
    "markdownlint-cli": "^0.39.0",
    "markdown-link-check": "^3.12.1",
    "prisma": "^5.17.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "python": ">=3.11.0"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0"
  }
}
