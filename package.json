{
  "name": "@americano/monorepo",
  "version": "1.0.0",
  "description": "Americano - AI-Powered Medical Education Platform",
  "private": true,
  "workspaces": [
    "apps/web",
    "services/ml-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:ml\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:ml": "cd services/ml-service && source venv/bin/activate && uvicorn app.main:app --reload --port 8000",
    "dev:web-only": "cd apps/web && npm run dev",
    "dev:ml-only": "cd services/ml-service && source venv/bin/activate && uvicorn app.main:app --reload --port 8000",
    "build": "npm run build:web && npm run build:ml",
    "build:web": "cd apps/web && npm run build",
    "build:ml": "cd services/ml-service && pip install -r requirements.txt",
    "health-check": "bash scripts/check-services.sh",
    "setup": "bash scripts/setup.sh",
    "setup:ml": "bash scripts/setup-ml.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prisma": "^5.17.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "python": ">=3.11.0"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0"
  }
}
